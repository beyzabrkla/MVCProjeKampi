@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Gelen Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Gelen Mesajlar</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        @Html.Action("ContactPartial", "Contact")
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Gelen Mesajlar</h3>
                    <div class="card-tools">
                        @using (Html.BeginForm("Inbox", "Message", FormMethod.Get))
                        {
                            <div class="input-group input-group-sm">
                                <input type="hidden" name="status" value="@ViewContext.RouteData.Values["status"]" />

                                <input type="text" name="search" class="form-control" placeholder="Mail Kutusunda Ara" value="@ViewBag.CurrentSearch">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <form id="bulkActionFormInbox" method="post" action="/Message/MessageBatchMoveToTrash">
                    <div class="card-body p-0">
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 20px;"></th>
                                        <th style="width: 20px;"></th>
                                        <th>Gönderen</th>
                                        <th>Konu</th>
                                        <th>Tarih</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" name="selectedMessages" value="@x.MessageId" id="check@(x.MessageId)">
                                                    <label for="check@(x.MessageId)"></label>
                                                </div>
                                            </td>
                                            <td><i class="fas fa-star"></i></td>
                                            <td><a href="/Message/GetInboxMessageDetails/@x.MessageId">@x.SenderMail</a></td>
                                            <td><a href="/Message/GetInboxMessageDetails/@x.MessageId">@x.Subject</a></td>
                                            <td>@x.MessageDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>
                                                <a href="/Message/MessageMoveToTrash/@x.MessageId" class="btn btn-default btn-sm"
                                                                                          title="Çöp Kutusuna Taşı"
                                                                                          onclick="return confirm('Bu mesajı çöp kutusuna taşımak istediğinizden emin misiniz?')">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer p-0">
                        <div class="mailbox-controls">
                            <button type="button" class="btn btn-default btn-sm checkbox-toggle-inbox">
                                <i class="far fa-square"></i>
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" id="bulkTrashBtnInbox">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            </div>
                            <a href="/Message/Inbox" class="btn btn-default btn-sm">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Mailbox Seçimini Aç/Kapa
        $('.checkbox-toggle-inbox').on('click', function () {
            var checked = $('.mailbox-messages input[type="checkbox"]').first().prop('checked');
            $('.mailbox-messages input[type="checkbox"]').prop('checked', !checked);
        });

        // Toplu Çöp Kutusuna Taşıma İşlemi
        $('#bulkTrashBtnInbox').on('click', function () {
            if ($('.mailbox-messages input[type="checkbox"]:checked').length > 0) {
                if (confirm('Seçili mesajları çöp kutusuna taşımak istediğinizden emin misiniz?')) {
                    $('#bulkActionFormInbox').submit(); // ID Kontrolü: bulkActionFormInbox
                }
            } else {
                alert('Lütfen en az bir mesaj seçin.');
            }
        });
    });
</script>