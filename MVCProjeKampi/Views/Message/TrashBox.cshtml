@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Çöp Kutusu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Contact> contactTrashList = ViewBag.ContactTrash as List<Contact>;
    string userMail = (string)Session["AdminMail"];
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Çöp Kutusu</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        @* Sol Menü *@
        @Html.Action("ContactPartial", "Contact")

        <div class="col-md-9">
            <div class="card card-primary card-outline">

                @* HEADER & ARAMA KUTUSU *@
                <div class="card-header">
                    <h3 class="card-title">Merkezi Çöp Kutusu</h3>

                    <div class="card-tools">
                        @using (Html.BeginForm("TrashBox", "Message", FormMethod.Get))
                        {
                            <div class="input-group input-group-sm">
                                <input type="text" name="search" class="form-control" placeholder="Mail Kutusunda Ara" value="@ViewBag.CurrentSearch">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive mailbox-messages">
                        <form id="bulkActionFormTrash" method="post">
                            @* Tabloya ID verdik: trashTable *@
                            <table class="table table-hover table-striped" id="trashTable">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">
                                            <button type="button" class="btn btn-default btn-sm checkbox-toggle-trash">
                                                <i class="far fa-square"></i>
                                            </button>
                                        </th>
                                        <th>Kaynak</th>
                                        <th>Kimden/Kime</th>
                                        <th>Konu</th>
                                        <th>Tarih</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @* A. SİLİNMİŞ İLETİŞİM MESAJLARI (Contact) *@
                                    @if (contactTrashList != null)
                                    {
                                        foreach (var x in contactTrashList)
                                        {
                                            <tr class="table-danger">
                                                <td>
                                                    <div class="icheck-primary">
                                                        <input type="checkbox" name="selectedContactIds" value="@x.ContactId" id="checkC@(x.ContactId)">
                                                        <label for="checkC@(x.ContactId)"></label>
                                                    </div>
                                                </td>
                                                <td><span class="badge badge-danger">İletişim</span></td>
                                                <td>Gönderen: @x.UserName (@x.UserMail)</td>
                                                <td><a href="/Contact/GetContactDetails/@x.ContactId" class="text-dark">@x.Subject</a></td>
                                                <td>@(((DateTime)x.ContactDate).ToString("dd-MMM-yyyy"))</td>
                                                <td>
                                                    <a href="/Contact/ContactRestore/@x.ContactId" class="btn btn-warning btn-sm" onclick="return confirm('Bu mesajı Gelen Kutusu\'na geri yüklemek istediğinizden emin misiniz?')"><i class="fas fa-redo"></i></a>
                                                    <a href="/Contact/ContactHardDelete/@x.ContactId" class="btn btn-danger btn-sm"
                                                       title="Kalıcı Olarak Sil"
                                                       onclick="return confirm('UYARI: Bu mesaj kalıcı olarak silinecektir. Emin misiniz?')">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                    @* B. SİLİNMİŞ SİSTEM MESAJLARI (Message) *@
                                    @foreach (var x in Model)
                                    {
                                        // Dinamik Etiket Rengi Belirleme
                                        string badgeClass = "badge-secondary";
                                        string sourceName = "Bilinmiyor";

                                        if (x.SourceFolder == "Gelen") { badgeClass = "badge-success"; sourceName = "Gelen Kutusu"; }
                                        else if (x.SourceFolder == "Giden") { badgeClass = "badge-info"; sourceName = "Giden Kutusu"; }
                                        else if (x.SourceFolder == "Taslak") { badgeClass = "badge-warning"; sourceName = "Taslak"; }

                                        <tr class="table-warning">
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" name="selectedMessageIds" value="@x.MessageId" id="checkM@(x.MessageId)">
                                                    <label for="checkM@(x.MessageId)"></label>
                                                </div>
                                            </td>

                                            @* Kaynak *@
                                            <td>
                                                <span class="badge @badgeClass">@sourceName</span>
                                            </td>

                                            @* Kimden/Kime *@
                                            <td>
                                                @if (x.SenderMail == userMail)
                                                {
                                                    <span>Kime: <b>@x.ReceiverMail</b></span>
                                                }
                                                else
                                                {
                                                    <span>Kimden: <b>@x.SenderMail</b></span>
                                                }
                                            </td>

                                            <td><a href="/Message/GetTrashMessageDetails/@x.MessageId" class="text-dark">@x.Subject</a></td>
                                            <td>@(((DateTime)x.MessageDate).ToString("dd-MMM-yyyy"))</td>

                                            @* İşlemler *@
                                            <td>
                                                <a href="/Message/MessageRestore/@x.MessageId" class="btn btn-warning btn-sm" onclick="return confirm('Bu mesajı Gelen Kutusu\'na geri yüklemek istediğinizden emin misiniz?')"><i class="fas fa-redo"></i></a>
                                                <a href="/Message/MessageHardDelete/@x.MessageId" class="btn btn-danger btn-sm"
                                                   title="Kalıcı Olarak Sil"
                                                   onclick="return confirm('UYARI: Bu mesaj kalıcı olarak silinecektir. Emin misiniz?')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>

                <div class="card-footer p-0">
                    <div class="mailbox-controls">
                        <div class="float-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-warning btn-sm" id="bulkRestoreBtn">
                                    <i class="fas fa-redo"></i> Seçileni Geri Yükle
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" id="bulkHardDeleteBtn">
                                    <i class="far fa-trash-alt"></i> Seçileni Kalıcı Sil
                                </button>
                            </div>
                            <a href="/Message/TrashBox" class="btn btn-default btn-sm">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        // 1. CANLI ARAMA (Live Search)
        // Hem Mesajları hem Contact'ları aynı anda filtreler
        $("#tableSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#trashTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        // 2. CHECKBOX TOGGLE
        $('.checkbox-toggle-trash').on('click', function () {
            var clicks = $(this).data('clicks');
            if (clicks) {
                // Hepsini Bırak
                $('.mailbox-messages input[type="checkbox"]').prop('checked', false);
                $('.checkbox-toggle-trash i').removeClass('fa-check-square').addClass('fa-square');
            } else {
                // Hepsini Seç
                $('.mailbox-messages input[type="checkbox"]').prop('checked', true);
                $('.checkbox-toggle-trash i').removeClass('fa-square').addClass('fa-check-square');
            }
            $(this).data('clicks', !clicks);
        });

        // 3. TOPLU GERİ YÜKLEME
        $('#bulkRestoreBtn').on('click', function () {
            var selectedMessages = $('input[name="selectedMessageIds"]:checked').length;
            var selectedContacts = $('input[name="selectedContactIds"]:checked').length;
            var checkedCount = selectedMessages + selectedContacts;

            if (checkedCount > 0) {
                if (confirm('Seçili ' + checkedCount + ' öğeyi Geri Yüklemek istediğinizden emin misiniz?')) {
                    var form = $('#bulkActionFormTrash');

                    if (selectedContacts > 0 && selectedMessages > 0) {
                        alert('Lütfen Contact (İletişim) ve Message (Sistem Mesajları) öğelerini aynı anda geri yüklemeyiniz. İşlemi ayrı ayrı yapınız.');
                        return; // İşlemi durdur
                    }

                    if (selectedContacts > 0) {
                        form.attr('action', '/Contact/ContactBatchRestore'); // SADECE Contact
                    } else if (selectedMessages > 0) {
                        form.attr('action', '/Message/TrashRestoreMessages'); // SADECE Message
                    }

                    document.getElementById('bulkActionFormTrash').submit();
                }
            } else {
                alert('Lütfen işlem yapmak için en az bir öğe seçin.');
            }
        });

        // 4. TOPLU KALICI SİLME
        $('#bulkHardDeleteBtn').on('click', function () {
            var selectedMessages = $('input[name="selectedMessageIds"]:checked').length;
            var selectedContacts = $('input[name="selectedContactIds"]:checked').length;
            var checkedCount = selectedMessages + selectedContacts;

            if (checkedCount > 0) {
                if (confirm('UYARI: Seçili ' + checkedCount + ' öğe KALICI OLARAK silinecektir. Emin misiniz?')) {
                    var form = $('#bulkActionFormTrash');

                    // Geri yüklemede olduğu gibi karışık silme yapamıyoruz.
                    if (selectedContacts > 0 && selectedMessages > 0) {
                        alert('Lütfen Contact (İletişim) ve Message (Sistem Mesajları) öğelerini aynı anda KALICI silmeyiniz. İşlemi ayrı ayrı yapınız.');
                        return; // İşlemi durdur
                    }

                    if (selectedContacts > 0) {
                        // Sadece Contact seçilmişse: ContactController/ContactBatchHardDelete
                        form.attr('action', '/Contact/ContactBatchHardDelete');
                    } else if (selectedMessages > 0) {
                        // Sadece Message seçilmişse: MessageController/TrashHardDeleteMessages
                        form.attr('action', '/Message/TrashHardDeleteMessages');
                    }

                    document.getElementById('bulkActionFormTrash').submit();
                }
            } else {
                alert('Lütfen işlem yapmak için en az bir öğe seçin.');
            }
        });
    });
</script>