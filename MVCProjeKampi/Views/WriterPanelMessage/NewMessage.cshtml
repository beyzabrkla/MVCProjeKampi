@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yeni Mesaj</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("MessageListMenu", "WriterPanelMessage")
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>
                        <!-- /.card-header -->
                        @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
                        {
                            @* KRİTİK EKLENTİ: Taslak düzenlenirken ID'yi taşır *@
                            @Html.HiddenFor(x => x.MessageId)

                            <div class="card-body">
                                <div class="form-group">
                                    @Html.Label("Alıcı Adı")
                                    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ReceiverMail, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Konu")
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Mesajınız")

                                    @* KRİTİK DÜZELTME: Veri bağlama için TextAreaFor kullanıldı *@
                                    @Html.TextAreaFor(x => x.MessageContent, new
                                    {
                                        @id = "compose-textarea", // JavaScript editörünüzün ID'si
                                        @class = "form-control",
                                        @style = "height:300px"
                                    })

                                    @* @Html.TextAreaFor kullandığımız için name="MessageContent" yazmaya gerek yoktur. *@
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" name="action" value="save" class="btn btn-default">
                                        <i class="fas fa-pencil-alt"></i> Taslaklara Kaydet
                                    </button>
                                    <button type="submit" name="action" value="send" class="btn btn-primary">
                                        <i class="far fa-envelope"></i> Gönder
                                    </button>
                                </div>
                                <a href="/WriterPanelMessage/Inbox" class="btn btn-default" title="İptal Et ve İletişim Listesine Dön">
                                    <i class="fas fa-times"></i> İptal Et
                                </a>
                            </div>
                        }
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>

