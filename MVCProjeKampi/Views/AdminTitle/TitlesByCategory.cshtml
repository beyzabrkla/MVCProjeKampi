@using EntityLayer.Concrete
@using PagedList.Mvc
@model PagedList.IPagedList<Title>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
}

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.CategoryName Kategorisi Başlıkları</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <a href="/AdminCategory/Index" class="btn btn-secondary mr-2">Kategorilere Geri Dön</a>
                    <a href="/Title/AddTitle" class="btn btn-info">Yeni Başlık Ekle</a>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Başlık Adı</th>
                            <th style="width: 15%">Oluşturan Yazar</th>
                            <th style="width: 10%">Durum</th>
                            <th style="width: 8%" class="text-center">Kategori</th>
                            <th style="width: 20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            // Kategoriye göre renk atama mantığı
                            if (x.Category != null)
                            {
                                if (x.Category.CategoryName == "Dizi" || x.Category.CategoryName == "Sosyal Medya")
                                {
                                    color = "badge badge-success";
                                }
                                else if (x.Category.CategoryName == "Film")
                                {
                                    color = "badge badge-warning";
                                }
                                else if (x.Category.CategoryName == "Kitap" || x.Category.CategoryName == "Spor")
                                {
                                    color = "badge badge-info";
                                }
                                else if (x.Category.CategoryName == "Tiyatro")
                                {
                                    color = "badge badge-secondary";
                                }
                                else if (x.Category.CategoryName == "Eğitim")
                                {
                                    color = "badge badge-danger";
                                }
                                else
                                {
                                    color = "badge badge-primary"; // Tanımlı olmayanlar
                                }
                            }

                            string durum = (x.TitleStatus == true) ? "Aktif" : "Pasif";

                            <tr>
                                <td>@x.TitleId</td>
                                <td>
                                    <a>@x.TitleName</a>
                                    <br />
                                    <small>@(((DateTime)x.TitleDate).ToString("dd-MMM-yyyy"))</small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@(x.Writer != null ? x.Writer.WriterImage : "/AdminLTE/dist/img/default-avatar.png")">
                                        </li>
                                        <li>
                                            @(x.Writer != null ? x.Writer.WriterName : "Bilinmiyor")
                                        </li>
                                    </ul>
                                </td>
                                <td>@durum</td>
                                <td class="project-state">
                                    <span class="@color">@(x.Category != null ? x.Category.CategoryName : "Tanımsız")</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByTitle/@x.TitleId">
                                        <i class="fas fa-folder"></i> Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Title/EditTitle/@x.TitleId">
                                        <i class="fas fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Title/DeleteTitle/@x.TitleId">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <div class="pagination-sm m-0 float-right">
                    @Html.PagedListPager(Model, page => Url.Action("TitlesByCategory", new { id = ViewBag.CategoryId, page = page }))
                </div>
                <div class="float-left pt-2">
                    @if (Model.TotalItemCount > 0)
                    {
                        @:Toplam @Model.TotalItemCount Başlık Bulundu.
                    }
                    else
                    {
                        @:Bu kategoride henüz başlık bulunmamaktadır.
                    }
                </div>
            </div>
        </div>
    </section>
</body>