@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "Mesaj Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Mesaj Detayı</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("ContactPartial", "Contact")
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <div class="card-tools">

                            <div class="btn-group">
                                @{
                                    // Önceki butonu
                                    if (ViewBag.PreviousContactId != null)
                                    {
                                        <a href="/Contact/GetContactDetails/@ViewBag.PreviousContactId" class="btn btn-default btn-sm" data-toggle="tooltip" title="Önceki Mesaj">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-default btn-sm" disabled data-toggle="tooltip" title="Önceki Mesaj Yok">
                                            <i class="fas fa-chevron-left"></i>
                                        </button>
                                    }

                                    // Sonraki butonu
                                    if (ViewBag.NextContactId != null)
                                    {
                                        <a href="/Contact/GetContactDetails/@ViewBag.NextContactId" class="btn btn-default btn-sm" data-toggle="tooltip" title="Sonraki Mesaj">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-default btn-sm" disabled data-toggle="tooltip" title="Sonraki Mesaj Yok">
                                            <i class="fas fa-chevron-right"></i>
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>Konu: @Model.Subject</h5>
                            <h6>
                                Kimden: @Model.UserName &lt;@Model.UserMail&gt;
                                <span class="mailbox-read-time float-right">
                                    @(((DateTime)Model.ContactDate).ToString("dd-MMM-yyyy HH:mm"))
                                </span>
                            </h6>
                        </div>
                        <div class="mailbox-read-message">
                            <p>
                                @Html.Raw(Model.Message.Replace(Environment.NewLine, "<br/>"))
                            </p>
                        </div>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>