
<div class="col-md-3">
    <a href="/Message/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> İletişim
                        @if (ViewBag.ContactCount > 0)
                        {
                            <span class="badge badge-primary float-right">@ViewBag.ContactCount</span>
                        }
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Message/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        @if (ViewBag.InboxCount > 0)
                        {
                            <span class="badge badge-primary float-right">@ViewBag.InboxCount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/SendBox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.SendBoxCount</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Inbox?status=unread" class="nav-link">
                        <i class="far fa-envelope-open"></i> Okunmamış Mesajlar
                        @if (ViewBag.UnreadCount != null && ViewBag.UnreadCount > 0)
                        {
                            <span class="badge bg-danger float-right">@ViewBag.UnreadCount</span>
                        }
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/Message/Drafts" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        @if (ViewBag.DraftCount > 0)
                        {
                            <span class="badge badge-warning float-right">@ViewBag.DraftCount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/TrashBox" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        @if (ViewBag.TrashCount > 0)
                        {
                            <span class="badge badge-danger float-right">@ViewBag.TrashCount</span>
                        }
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
</div>
