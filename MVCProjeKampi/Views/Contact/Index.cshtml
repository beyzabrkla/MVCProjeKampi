@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="hold-transition sidebar-mini">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesajlar</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="row">
            @Html.Action("ContactPartial", "Contact")
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Gelen Mesajlar</h3>
                        <div class="card-tools">
                            @using (Html.BeginForm("Index", "Contact", FormMethod.Get))
                            {
                                <div class="input-group input-group-sm">
                                    <input type="text" name="search" class="form-control" placeholder="Mail Kutusunda Ara" value="@ViewBag.CurrentSearch">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <form method="post" action="/Contact/ContactBatchMoveToTrash">

                        <div class="card-body p-0">
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover table-striped">
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="icheck-primary">
                                                        <input type="checkbox"
                                                               name="selectedContacts"
                                                               value="@x.ContactId"
                                                               id="check_@x.ContactId">
                                                        <label for="check_@x.ContactId"></label>
                                                    </div>
                                                </td>
                                                <td class="mailbox-star"><a href="#"><i class="fas fa-star text-warning"></i></a></td>
                                                <td class="mailbox-name"><a href="/Contact/GetContactDetails/@x.ContactId">@x.UserName</a></td>
                                                <td class="mailbox-subject">
                                                    <b>@x.Subject</b> - @( !string.IsNullOrEmpty(x.Message) && x.Message.Length > 30 ? x.Message.Substring(0, 30) + "..." : x.Message ?? "" )
                                                </td>
                                                <td class="mailbox-attachment"></td>
                                                <td class="mailbox-date">
                                                    @(((DateTime)x.ContactDate).ToString("dd-MMM-yyyy"))
                                                </td>

                                                <td class="mailbox-trash">
                                                    <a href="/Contact/ContactMoveToTrash/@x.ContactId"
                                                       class="btn btn-default btn-sm"
                                                       onclick="return confirm('Bu mesajı çöp kutusuna taşımak istediğinizden emin misiniz?')">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer p-0">
                            <div class="mailbox-controls">
                                <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                                    <i class="far fa-square"></i>
                                </button>
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-default btn-sm"
                                            title="Seçilenleri Çöp Kutusuna Taşı"
                                            onclick="return confirm('Seçilen tüm mesajları çöp kutusuna taşımak istediğinizden emin misiniz?')">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                                <a href="/Contact/Index" class="btn btn-default btn-sm" title="Yenile">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                                <div class="float-right">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>
    $(function () {
        //Enable check and uncheck all functionality
        $('.checkbox-toggle').click(function () {
            var clicks = $(this).data('clicks')
            if (clicks) {
                //Uncheck all checkboxes
                $('.mailbox-messages input[type="checkbox"]').prop('checked', false)
                // İkon düzeltildi: square yerine check-square ve tam tersi
                $('.checkbox-toggle .fas.fa-check-square').removeClass('fas fa-check-square').addClass('far fa-square')
            } else {
                //Check all checkboxes
                $('.mailbox-messages input[type="checkbox"]').prop('checked', true)
                // İkon düzeltildi: square yerine check-square ve tam tersi
                $('.checkbox-toggle .far.fa-square').removeClass('far fa-square').addClass('fas fa-check-square')
            }
            $(this).data('clicks', !clicks)
        })
    })
</script>