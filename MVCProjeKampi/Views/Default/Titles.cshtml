@using EntityLayer.Concrete
@model List<Title>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>MVC Proje Kampı</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <!-- Summernote CSS -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">MVC Proje Kampı</span>
            </a>

                <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="/WriterPanel/AllTitles" class="nav-link">
                                    <i class="nav-icon fas fa-list-alt"></i>
                                    <p>
                                        Tüm Başlıklar
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    </div>
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            @foreach (var x in Model)
                            {
                                <li class="nav-item">
                                    <a href="/Default/Titles/?id=@x.TitleId" class="nav-link">
                                        <p>
                                            @x.TitleName
                                        </p>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
</aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                @if (ViewBag.CurrentTitleId != 0) // Controller'da 0 atanması durumunu kontrol et
                {
                    @Html.Action("ContentPartial", "Default", new { id = ViewBag.CurrentTitleId })
                }
                else
                {
                    <p class="text-danger">Gösterilebilecek başlık veya içerik bulunamadı.</p>
                }
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <!-- Bootstrap -->
</body>
</html>
<!-- Bootstrap -->
<script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Summernote JS -->
<script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>

<!-- AdminLTE -->
<script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>

<!-- OPTIONAL SCRIPTS -->
<script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
<script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
<script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>

<!-- Summernote Init -->
<script>
    $(function () {
        $('#compose-textarea').summernote({
            height: 300
        });
    });
</script>
